{
    "name": "phpunit/php-code-coverage",
    "description": "Provides coverage for testing",
    "homepage": "https://github.com/Tiyani99/coverage.git",

    "scripts": {
        "test": "nyc --reporter=html --reporter=text ./vendor/bin/phpunit",
        "coverage": "nyc report --reporter=text-lconv | coveralls"
    },

    "require": {
        "phpunit/phpunit": "^8.5",
        "phpunit/php-code-coverage": "2.*"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "coveralls": "^3.0.0"
    },

    "autoload": {
        "psr-4": {
            "php\\": "src/"
        }
    }
}
